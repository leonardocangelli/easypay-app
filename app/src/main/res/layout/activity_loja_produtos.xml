<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient"
    tools:context="br.com.easypayapp.easypay.loja.LojaProdutosActivity">

    <ListView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/listViewProdutos" />

    <Button
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:id="@+id/btnFinish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button"
        android:clickable="true"
        android:focusable="true"
        android:paddingEnd="78dp"
        android:paddingLeft="78dp"
        android:paddingRight="78dp"
        android:paddingStart="78dp"
        android:onClick="pagar"
        android:text="Pagar"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</LinearLayout>
